<LoginView>:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 0.95, 0.95, 1, 1  # Light bluish background


        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.8, None
            #height: self.miniumum_height

            MDLabel:
                text: 'Welcome '
                font_style: "H4"
                halign: "center"
                theme_text_color: "Primary"

            MDTextField:
                id: username_input
                hint_text: "Username"
                icon_right: "account"
                mode: "rectangle"
                color_mode: "custom"
                line_color_focus: 0, 0.4, 1, 1
                text_color_focus: 0, 0.4, 1, 1
                current_hint_text_color: 0.3, 0.3, 0.3, 1
                helper_text_mode: "on_error"
                #helper_text: "Username is required"

            MDTextField:
                id: password_input
                hint_text: "Password"
                icon_right: "lock"
                password: True
                mode: "rectangle"
                line_color_focus: 0, 0.4, 1, 1
                text_color_focus: 0, 0.4, 1, 1
                current_hint_text_color: 0.3, 0.3, 0.3, 1
                helper_text_mode: "on_error"
                #helper_text: "Password is required"

            MDLabel:
                text: root.error_message
                theme_text_color: "Error"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDRaisedButton:
                text: "Login"
                size_hint_x: 1
                pos_hint: {"center_x": 0.5}
                on_release: root.on_login_press()
                padding: dp(15)
            

            MDTextButton:
                text: "Don't have an account? Sign up"
                pos_hint: {"center_x": 0.5}
                on_release: root.on_signup_press()

