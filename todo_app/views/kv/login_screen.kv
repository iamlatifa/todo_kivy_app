#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDFlatButton kivymd.uix.button.MDFlatButton
#:import MDIconButton kivymd.uix.button.MDIconButton
#:import MDCard kivymd.uix.card.MDCard

<LoginScreen>:
    rgba: app.theme_cls.primary_light

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        size_hint: None, None
        width: dp(320)
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDLabel:
            text: "Welcome Back"
            halign: 'center'
            font_style: 'H4'
            theme_text_color: 'Primary'
            size_hint_y: None
            height: self.texture_size[1]  # Ensures the label height adjusts to text size

        MDCard:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            size_hint: None, None
            size: dp(300), dp(180)
            pos_hint: {'center_x': 0.5}
            elevation: 0
            radius: [12, 12, 12, 12]
            md_bg_color: (1, 1, 1, 1)  # White card background

            MDTextField:
                id: username
                hint_text: "User name"
                mode: 'rectangle'
                line_color_normal: (0.8, 0.85, 0.9, 1)
                line_color_focus: (0.26, 0.65, 0.96, 1)
                icon_left: "email"
                icon_left_color: app.theme_cls.primary_color
                padding: [dp(10), dp(10)]  # Adds padding to the text field

            MDTextField:
                id: password
                hint_text: "Password"
                password: True
                mode: 'rectangle'
                line_color_normal: (0.8, 0.85, 0.9, 1)
                line_color_focus: (0.26, 0.65, 0.96, 1)
                icon_left: "lock"
                icon_left_color: app.theme_cls.primary_color
                padding: [dp(10), dp(10)]  # Adds padding to the text field

        MDRaisedButton:
            text: "Login"
            md_bg_color: (0.26, 0.65, 0.96, 1)  # Medium blue background (#42A5F5)
            text_color: (1, 1, 1, 1)
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            on_release: root.on_login_press()

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: dp(0)  # Removes space between label and button
            size_hint_y: None
            height: dp(30)
            pos_hint: {'center_x': 0.5}

            MDLabel:
                text: "Don't have an account?"
                theme_text_color: 'Secondary'
                font_style: 'Body2'

            MDTextButton:
                text: "Sign Up"
                text_color: (0.18, 0.52, 0.88, 1)  # Subtle darker blue
                on_release: root.on_signup_press()
