<SignupView>:
    name: 'Signup'
    MDFloatLayout:
        md_bg_color: 0.95, 0.95, 1, 1  # Light bluish background

        ScrollView:
            size_hint: 1,1


            MDBoxLayout:
                orientation: "vertical"
                padding: dp(20)
                spacing: dp(20)

                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5}

                Widget:
                    size_hint_y: None
                    height: dp(50)  # ‚Üê adjust this height as needed


                MDLabel:
                    text: 'Create an account '
                    font_style: "H4"
                    halign: "center"
                    theme_text_color: "Primary"

                MDTextField:
                    id: username_input
                    hint_text: "Username"
                    icon_right: "account"
                    mode: "rectangle"
                    color_mode: "custom"
                    line_color_focus: 0, 0.4, 1, 1
                    text_color_focus: 0, 0.4, 1, 1
                    current_hint_text_color: 0.3, 0.3, 0.3, 1
                    helper_text_mode: "on_error"
                    helper_text: "Username is required"

                MDTextField:
                    id: email_input
                    hint_text: "Email"
                    icon_right: "account"
                    mode: "rectangle"
                    color_mode: "custom"
                    line_color_focus: 0, 0.4, 1, 1
                    text_color_focus: 0, 0.4, 1, 1
                    current_hint_text_color: 0.3, 0.3, 0.3, 1
                    helper_text_mode: "on_error"
                    helper_text: "Username is required"

                MDTextField:
                    id: password_input
                    hint_text: "Password"
                    icon_right: "lock"
                    password: True
                    mode: "rectangle"
                    line_color_focus: 0, 0.4, 1, 1
                    text_color_focus: 0, 0.4, 1, 1
                    current_hint_text_color: 0.3, 0.3, 0.3, 1
                    helper_text_mode: "on_error"
                    helper_text: "Password is required"


                MDTextField:
                    id: password_confirm
                    hint_text: "Confirm Password"
                    icon_right: "lock"
                    password: True
                    mode: "rectangle"
                    line_color_focus: 0, 0.4, 1, 1
                    text_color_focus: 0, 0.4, 1, 1
                    current_hint_text_color: 0.3, 0.3, 0.3, 1
                    helper_text_mode: "on_error"
                    helper_text: "Please confirm password"

                MDLabel:

                    text: root.error_message
                    theme_text_color: "Error"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "signup"
                    size_hint_x: 1
                    pos_hint: {"center_x": 0.5}
                    on_release: root.on_signup_press()
                    padding: dp(15)


                Widget:
                    size_hint_y: None
                    height: dp(20)
                

                MDTextButton:
                    text: "Already have an account? login"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.on_login_press()

